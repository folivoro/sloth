{
    "name": "sixmonkey/sloth",
    "authors": [
        {
            "name": "Ben Kremer",
            "email": "hallo@benkremer.de"
        }
    ],
    "require": {
        "bordoni/phpass": "^0.3.6",
        "brain/hierarchy": "^2.3",
        "cakephp/utility": "^3.5",
        "corcel/acf": "^4",
        "friendsofphp/php-cs-fixer": "^2.17",
        "gossi/docblock": "^1.6",
        "illuminate/console": "^8",
        "illuminate/container": "^8",
        "illuminate/events": "^8",
        "illuminate/filesystem": "^8",
        "illuminate/http": "^8",
        "illuminate/log": "^8",
        "illuminate/pagination": "^8",
        "illuminate/validation": "^8",
        "illuminate/view": "^8",
        "jgrossi/corcel": "^5",
        "jjgrainger/posttypes": "^2.0",
        "jover/singleton": "^1.0",
        "kdyby/html-validator-panel": "^1.1",
        "league/climate": "^3.2",
        "milo/vendor-versions": "^1.1",
        "nikic/fast-route": "^1.2",
        "org_heigl/hyphenator": "^2.2",
        "roots/wp-password-bcrypt": "^1.0",
        "spatie/emoji": "^2.0",
        "spatie/image": "^1.5",
        "staudenmeir/belongs-to-through": "^2.10",
        "tracy/tracy": "2.7.5",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "ergebnis/composer-normalize": "^2.11"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sloth\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "archive": {
        "exclude": [
            "vendor/",
            "composer.json",
            "composer.lock",
            "README.md",
            "docs/"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "post-merge": [
                "composer install --ignore-platform-reqs"
            ],
            "pre-commit": [
                "vendor/bin/php-cs-fixer fix",
                "composer normalize"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    }
}
